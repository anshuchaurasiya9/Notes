<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#707070">

        <View
            android:id="@+id/notePriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:layout_margin="10dp"
            android:layout_gravity="right"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NotesApp Using Kotlin MVVM"
                android:textStyle="bold"
                android:fontFamily="@font/alatsi"
                android:textSize="16sp"
                android:maxLines="1"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/notesSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iabkkoanlnlafnlonadlkneoano naolnon onoaskjb sbi ii vefivfi shvio fdnok opijdfaj"
                android:fontFamily="@font/alatsi"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColor="#DADADA"/>


            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 March 2023"
                android:textStyle="bold"
                android:fontFamily="@font/alatsi"
                android:textSize="16sp"
                android:maxLines="1"
                android:textColor="@color/white"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>